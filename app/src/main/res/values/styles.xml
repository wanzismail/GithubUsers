<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/form_border_color</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="errorTextColor">@color/form_error_color</item>
        <item name="boxStrokeErrorColor">@color/form_error_color</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/material_text_size_body_2_regular</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSpinner" />

    <style name="CustomSpinner.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/md_text_size_body_2_regular</item>
    </style>
</resources>